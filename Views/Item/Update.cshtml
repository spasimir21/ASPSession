@model BorrowLend.Models.Item
@{
    ViewData["Title"] = "Udate";
}

<h1>Update</h1>
<form method="post" asp-action="Update">
  <div class="row">
    <div class="col-12">
      <div class="form-group row">
        <label class="col-3 m1 form-control" asp-for="ItemName"></label>
        <label class="col-3 m1 form-control" asp-for="Borrower"></label>
        <label class="col-3 m1 form-control" asp-for="Lender"></label>
      </div>
      <div class="form-group row">
        <input class="col-3 m1 form-control" asp-for="ItemName" />
        <input class="col-3 m1 form-control" asp-for="Borrower" />
        <input class="col-3 m1 form-control" asp-for="Lender" />
      </div>
      <div class="form-group row">
        <div class="col-3 form-control m-1"></div>
        <button type="submit" class="col-3 btn btn-success m-1">Update</button>
        <button asp-action="Index" class="col-3 btn btn-danger m-1">Back</button>
      </div>
    </div>
  </div>
</form>